for i in range(5,-1,-1):
    for j in range(k,0,-1):
        print(end="  ")
    k=k+1
    for j in range(0,i+1):
        print('*',end='  ')
    print(" ")
k= (2*5)-2
for i in range(0,6):
    for j in range(0,k):
        print(end="  ")
    k=k-1
    for j in range(0,i+1):
        print('*',end='  ')
    print(" ")


# 15.
****************
*******__*******
******____******
*****______*****
****________****
***__________***
**____________**
*______________*

code 
rows = 16
print("*" * rows, end="\n")
i = (rows // 2) - 1
j = 2
while i != 0:
    while j <= (rows - 2):
        print("*" * i, end="")
        print("_" * j, end="")
        print("*" * i, end="\n")
        i = i - 1
        j = j + 2
